generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  password String
  cv       CV[]
  name     String?
}

enum Category {
  SOFTWARE_DEVELOPMENT
  ECONOMICS
  MARKETING
  FINANCE
  DESIGN
  DATA_SCIENCE
  ENGINEERING
  HEALTHCARE
  EDUCATION
  SALES
}

model CV {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  file       Bytes
  createdAt  DateTime   @default(now())
  categories Category[]
  user       User?      @relation(fields: [userId], references: [id])
  userId     String?    @db.ObjectId
  accepted   Boolean
}
